# Environment Configuration Template
# Copy this file to .env.local for development
# Never commit actual .env files to version control

# ===================================
# API Configuration
# ===================================
NEXT_PUBLIC_API_URL=http://localhost:3001
API_SECRET_KEY=your-secret-key-here

# ===================================
# Database
# ===================================
DATABASE_URL=postgresql://user:password@localhost:5432/starrynight_dev
DATABASE_POOL_SIZE=20

# ===================================
# Redis Cache
# ===================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===================================
# Authentication
# ===================================
JWT_SECRET=your-jwt-secret-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===================================
# Stripe Payment
# ===================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===================================
# AWS S3 / CloudFront
# ===================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=starrynight-images
AWS_CLOUDFRONT_DOMAIN=d2w9rnfcy7mm78.cloudfront.net

# ===================================
# Cloudinary (Alternative to S3)
# ===================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===================================
# Monitoring & Error Tracking
# ===================================
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-org
SENTRY_PROJECT=starrynight

# ===================================
# Email Service (Optional)
# ===================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@starrynight.art

# ===================================
# Feature Flags
# ===================================
ENABLE_NFT_FEATURES=false
ENABLE_AUCTION_MODE=false
ENABLE_AI_RECOMMENDATIONS=false

# ===================================
# Security
# ===================================
CORS_ORIGIN=http://localhost:3000,https://starrynight.art
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ===================================
# Analytics (Optional)
# ===================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# ===================================
# Environment
# ===================================
NODE_ENV=development
